generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String
  company   String?
  message   String
  sourceUrl String?  // The URL the form was submitted from
  formName  String?  // "Navbar Appt", "Contact Page", etc. 
  
  createdAt DateTime @default(now())
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  name     String
}
